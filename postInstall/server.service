[Unit]
Description=SensePower
Wants=gdtMan.service
Wants=bluetooth.service
After=gdtMan.service
After=bluetooth.service

[Service]
Type=dbus
BusName=com.SensePower
ExecStart=/usr/local/bin/node /opt/rGauge/gList/SensePower/app.js
Restart=on-failure
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=SensePower
User=rgservice
Group=irdclient
Environment=PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
Environment=NODE_ENV=production
Environment=NODE_PATH=/opt/rGauge/.npm-global/lib/node_modules
WorkingDirectory=/opt/rGauge/gList/SensePower
TimeoutSec=180

[Install]
WantedBy=multi-user.target